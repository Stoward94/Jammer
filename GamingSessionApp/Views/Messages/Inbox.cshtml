@using GamingSessionApp.Helpers
@model IEnumerable<GamingSessionApp.ViewModels.Inbox.UserMessagesViewModel>

@{
    ViewBag.Title = "Inbox";
}

@Html.SuccessMessage(ViewBag.SuccessMessage as string)

<h2>Inbox</h2>

<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-default" })

    @Html.ActionLink("Outbox", "Outbox", "Messages", null, new { @class = "btn btn-default" })

    <button id="mark-read-btn" class="btn btn-default" data-url="@Url.Action("MarkRead", "Messages")">Mark as Read</button>
</p>
<table class="table">
    <tr>
        <th></th>
        <th></th>
        <th>
            @Html.DisplayNameFor(model => model.SenderName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Subject)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SentDate)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            <input type="checkbox" data-id="@item.Id"/>
        </td>
        <td>
            @if (item.Read)
            {
                <i class="fa fa-envelope-o"></i>
            }
            else
            {
                <i class="fa fa-envelope"></i>
            }
        </td>
        <td>
            <img src="@item.SenderImageUrl" width="36" height="36" title="@item.SenderName" alt="@item.SenderName"/>
            @Html.ActionLink(item.SenderName, "UserProfile", "Profile", new {userName = item.SenderName}, null)
        </td>
        <td>
            @Html.ActionLink(item.Subject, "View", "Messages", new {id = item.Id}, null)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SentDate)
        </td>
        <td>
            <a class="delete-message" href="/Messages/Delete?id=@item.Id" data-ajax-method="DELETE">
                <i class="fa fa-trash-o"></i>
            </a>
        </td>
    </tr>
}

</table>
