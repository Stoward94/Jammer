@using GamingSessionApp.Helpers;
@model GamingSessionApp.ViewModels.Feedback.CreateFeedbackViewModel

@{
    ViewBag.Title = "Submit";
}

<h2>Submit</h2>

@using (Html.BeginForm("Submit", "Feedback")) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>CreateFeedbackViewModel</h4>
        <hr/>
        @Html.SuccessMessage(ViewBag.SuccessMessage as string)

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.CanSubmitFeedback, htmlAttributes: new {@class = "control-label col-md-2"})
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.CanSubmitFeedback)
                    @Html.ValidationMessageFor(model => model.CanSubmitFeedback, "", new {@class = "text-danger"})
                </div>
            </div>
        </div>

        @for (int i = 0; i < Model.UsersFeeback.Count; i++)
        {
            <div>@Html.DisplayFor(m => m.UsersFeeback[i].Username)</div>
            if (Model.CanSubmitFeedback)
             {
                 <div>@Html.EditorFor(m => m.UsersFeeback[i].Comments, new {htmlAttributes = new {@class = "form-control"}})</div>
                 <div>@Html.EditorFor(m => m.UsersFeeback[i].Rating, new {htmlAttributes = new {@class = "form-control"}})</div>
             }
             else
             {
                 <div>@Html.DisplayFor(m => m.UsersFeeback[i].Comments, new {htmlAttributes = new {@class = "form-control"}})</div>
                 <div>@Html.DisplayFor(m => m.UsersFeeback[i].Rating, new {htmlAttributes = new {@class = "form-control"}})</div>
             }

            @Html.HiddenFor(m => m.UsersFeeback[i].UserId)
        }

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to Session", "Details", "Sessions", new { id = Model.SessionId }, null)
</div>
