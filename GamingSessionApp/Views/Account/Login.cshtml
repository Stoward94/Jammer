@using GamingSessionApp.Models
@using Microsoft.Owin.Security
@model LoginViewModel
@{
    ViewBag.Title = "Log in";
}

@Html.ValidationSummary(true, "", new { @class = "text-danger" })

<div class="register-form">
    @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()

        <div class="register-heading">
            <h3><i class="fa fa-gamepad"></i> Get back in the game</h3>
        </div>

        <div class="col-md-12 register-fields">

            <div class="form-group">
                <div class="input-group input-group-lg">
                    <span class="input-group-addon"><i class="fa fa-user" style="width: 15px"></i></span>
                    @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", @placeholder = "Username", @autofocus="" })
                </div>
                @Html.ValidationMessageFor(m => m.UserName, null, new { @class = "text-danger" })
            </div>

            <div class="form-group">
                <div class="input-group input-group-lg">
                    <span class="input-group-addon"><i class="fa fa-lock" style="width: 15px"></i></span>
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Password" })
                </div>
                @Html.ValidationMessageFor(m => m.Password, null, new { @class = "text-danger" })
            </div>

            <div class="form-group">
                <button type="submit" class="register-btn"><i class="fa fa-sign-in"></i> Log in</button>
            </div>

            <div class="form-group">
                <div class="col-md-6 center-xs">
                    <div class="checkbox" style="padding: 0">
                        <label>
                            @Html.CheckBoxFor(m => m.RememberMe) Remember Me
                        </label>
                    </div>
                </div>
                <div class="col-md-6 text-right center-xs">
                    <a href="@Url.Action("ForgotPassword")" class="gray">Forgot your password</a>
                </div>
            </div>

            

            <div class="text-center" style="margin-top: 20px;">
                <a href="@Url.Action("Register")" class="gray">Don't have an account? Create one</a>
            </div>
        </div>
    }
</div>

<div class="col-md-8 col-md-offset-2">
    <hr/>

    @Html.Partial("_ExternalLoginsListPartial", new ExternalLoginListViewModel { ReturnUrl = ViewBag.ReturnUrl })

</div>