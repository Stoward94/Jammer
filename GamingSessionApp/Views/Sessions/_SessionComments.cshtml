@model GamingSessionApp.ViewModels.Session.SessionDetailsVM

<div id="sessionFeed" style="margin-top: 30px;">
    @foreach (var message in Model.Messages)
            {
        <div class="well">
            <span>#@message.MessageNo: @message.Author.UserName</span>
            <br />
            <br />
            @Html.DisplayFor(modelItem => message.Body)
            <br />
            <br />
            @Html.DisplayFor(modelItem => message.CreatedDate)
        </div>
    }

</div>

@if (Model.CanPost)
{
    using (Html.BeginForm("PostComment", "Sessions", FormMethod.Post))
    {
        <div id="commentBox">

            <div class="form-group">
                <textarea id="comment" name="comment" rows="4" placeholder="Enter your comment here" class="form-control" required></textarea>
            </div>
            <div class="form-group">
                <input type="submit" class="btn btn-default" value="Post"/>
            </div>

            @Html.Hidden("sessionId", Model)

        </div>
    }
}
